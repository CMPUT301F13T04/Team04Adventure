<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.team04adventure"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
        
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.team04adventure.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.team04adventure.SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.example.team04adventure.StoryIntro"
            android:label="@string/title_activity_story_intro" >
        </activity>
        <activity
            android:name="com.example.team04adventure.FragmentViewer"
            android:label="@string/title_activity_fragment_viewer" >
        </activity>
        <activity
            android:name="com.example.team04adventure.OfflineStoryList"
            android:label="@string/title_activity_offline_story_list" >
        </activity>
        <activity
            android:name="com.example.team04adventure.OnlineStoryList"
            android:label="@string/title_activity_online_story_list" >
        </activity>
        <activity
            android:name="com.example.team04adventure.EditFragment"
            android:label="@string/title_activity_edit_fragment" >
        </activity>
        <activity
            android:name="com.example.team04adventure.AllStoriesListSwipe"
            android:label="@string/title_activity_all_stories_list_swipe" >
        </activity>
        <activity
            android:name="com.example.team04adventure.MyStoriesListSwipe"
            android:label="@string/title_activity_my_stories_list_swipe" >
        </activity>
    </application>

</manifest>
