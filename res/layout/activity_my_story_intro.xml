<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/middle"
    tools:context=".StoryIntro" >

    <TextView
        android:id="@+id/StoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="24sp"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:text="" />
    
    <TextView
        android:id="@+id/StoryAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:layout_below="@+id/StoryTitle"
        android:text="By, " />
   
    <TextView
        android:id="@+id/StorySynop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:layout_below="@+id/StoryAuthor"
         />

    <Button
        android:id="@+id/Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StoryTitle"
        android:layout_alignRight="@+id/StoryAuthor"
        android:layout_below="@+id/StorySynop"
        android:text="Play Story!"
        android:onClick="playStory"  />

    <Button
        android:id="@+id/AddFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StoryTitle"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Play"
        android:text="Add Fragment" 
        android:onClick = "addFragment"
        />
    	
    <Button
        android:id="@+id/Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StoryTitle"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/AddFrag"
        android:text="Edit" 
        android:onClick = "editStory"/>
    <Button
        android:id="@+id/Publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StoryTitle"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Edit"
        android:text="Publish" 
        android:onClick = "publishStory"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Publish"
        android:layout_alignRight="@+id/Publish"
        android:layout_below="@+id/Publish"
        android:text="Delete" 
        android:onClick="deleteStory" 
        />

</RelativeLayout>
