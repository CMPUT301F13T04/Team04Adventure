<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/middle"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StoryIntro" >

    <TextView
        android:id="@+id/StoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="45sp" />

    <TextView
        android:id="@+id/StoryAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/StoryTitle"
        android:gravity="center"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/StorySynop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/StoryAuthor"
        android:maxLines="12"
        android:scrollbars="vertical"
        android:text="	"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        
        <ImageButton
            android:id="@+id/Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:onClick="playStory"
            android:layout_weight="1"
            android:src="@drawable/playimg" />
        
        <ImageButton
            android:id="@+id/AddFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:onClick="addFragment"
            android:layout_weight="1"
            android:src="@drawable/addfragimg" />

        <ImageButton
            android:id="@+id/Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:onClick="editStory"
            android:layout_weight="1"
            android:src="@drawable/editimg" />

        <ImageButton
            android:id="@+id/Download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:onClick="cacheStory"
            android:layout_weight="1"
            android:src="@drawable/downloadimg" />
        
        <ImageButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:onClick="deleteStory"
            android:layout_weight="1"
            android:src="@drawable/deleteimg" />
        
    </LinearLayout>

</RelativeLayout>