<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StoryIntro" >

    <TextView
        android:id="@+id/StoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="24sp" />
    
    <TextView
        android:id="@+id/StoryAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/StoryTitle"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/StorySynop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:layout_below="@+id/StoryAuthor"
         />

    <Button
        android:id="@+id/Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StoryTitle"
        android:layout_alignRight="@+id/StoryAuthor"
        android:layout_below="@+id/StorySynop"
        android:text="Play Story!"
        android:onClick="playStory"  />

    <Button
        android:id="@+id/remove_from_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StoryTitle"
        android:layout_alignRight="@+id/Play"
        android:layout_below="@+id/Play"
        android:onClick="removeFromCache"
        android:text="Remove from Cache" />

</RelativeLayout>
